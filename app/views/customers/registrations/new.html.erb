<h3 class="text-center" style="width: 170px; margin: 30px 0 30px 100px; background-color: lightgray;">新規会員登録</h3>

<%= render "customers/shared/error_messages", resource: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<table class="table" style="max-width: 800px">

  <tr>
    <td style="border-style: none;">名前</td>
    <td style="border-style: none;">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "姓", class: "form-control" %>
    </td>
    <td style="border-style: none;">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "名", class: "form-control" %>
    </td>
  </tr>

  <tr>
    <td style="border-style: none;">フリガナ</td>
    <td style="border-style: none;">
      <%= f.text_field :read_last_name, autofocus: true, autocomplete: "read_last_name", placeholder: "セイ", class: "form-control" %>
    </td>
    <td style="border-style: none;">
      <%= f.text_field :read_first_name, autofocus: true, autocomplete: "read_first_name", placeholder: "メイ", class: "form-control" %>
    </td>
  </tr>

  <tr>
    <td style="border-style: none;">メールアドレス</td>
    <td style="border-style: none;">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </td>
    <td style="border-style: none;"></td>
  </tr>

  <tr>
    <td style="border-style: none;">郵便番号（ハイフンなし）</td>
    <td style="border-style: none;">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control", id: "address_zipcode" %>
    </td>
    <td style="border-style: none;"></td>
  </tr>

  <tr>
    <td style="border-style: none;">住所</td>
    <td colspan="2"  style="border-style: none;">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control", id: "address" %>
    </td>
  </tr>

  <tr>
    <td style="border-style: none;">電話番号（ハイフンなし）</td>
    <td style="border-style: none;">
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %>
    </td>
    <td style="border-style: none;"></td>
  </tr>

  <tr>
    <td style="border-style: none;">パスワード(6文字以上)</td>
    <td style="border-style: none;">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </td>
    <td style="border-style: none;"></td>
  </tr>

  <tr>
    <td style="border-style: none;">パスワード(確認用)</td>
    <td style="border-style: none;">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </td>
    <td style="border-style: none;"></td>
  </tr>

  <tr>
    <td style="border-style: none;"></td>
    <td class="text-center" colspan="2" style="border-style: none;"><%= f.submit "新規登録", class: "btn btn-success" %></td>
  </tr>

</table>
<% end %>

<h3 class="text-center" style="width: 200px; margin: 30px 0 30px 100px; background-color: lightgray;">既に登録済みの方</h3>
<p style="margin-left: 100px;"><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
