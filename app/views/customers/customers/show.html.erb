<h3 class="text-center" style="width: 200px; margin: 30px 0 30px 100px; background-color: lightgray;">マイページ</h3>
<div class="mypage-header" style="margin-bottom: 20px;">
	<h4 style="margin-right: 10px; display: inline-block;">登録情報</h4>
	<%= link_to "編集する", edit_customers_path, class: "btn btn-primary" %>
	<%= link_to "パスワードを変更する", "#", class: "btn btn-primary" %>
</div>

<table class="table table-bordered" style="max-width: 600px;">
	<col style="width: 30%; background-color: lightgray;">
	<col style="width: 70%;">
	<tr>
		<td class="active">氏名</td>
		<td><%= @customer.last_name + " " + @customer.first_name %></td>
	</tr>
	<tr>
		<td class="active">カナ</td>
		<td><%= @customer.read_last_name + " " + @customer.read_first_name %></td>
	</tr>
	<tr>
		<td class="active">郵便番号</td>
		<td><%= @customer.postal_code %></td>
	</tr>
	<tr>
		<td class="active">住所</td>
		<td><%= @customer.address %></td>
	</tr>
	<tr>
		<td class="active">電話番号</td>
		<td><%= @customer.phone_number %></td>
	</tr>
	<tr>
		<td class="active">メールアドレス</td>
		<td><%= @customer.email %></td>
	</tr>
</table>
<table>
 <tr>
  <td>
   <h4 style="margin-right: 10px; display: inline-block;">配送先</h4>
  </td>
  <td>
   <%= link_to "一覧を見る", deliveries_path, data: { turbolinks: false }, class: "btn btn-primary" %>
  </td>
 </tr>
 <tr>
  <td>
   <h4 style="margin-right: 10px ; display: inline-block;">注文履歴</h4>
  </td>
  <td>
   <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </td>
 </tr>
</table>