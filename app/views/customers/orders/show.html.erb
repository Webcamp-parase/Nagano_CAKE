<h3>注文履歴詳細</h3>

<p>注文情報</p>
<table class="table">
	<tr>
		<th>注文日</th>
		<td><%= l @order.created_at, format: :short %></td>
	</tr>
	<tr>
		<th>配送先</th>
		<td><%= @order.postal_code %></br>
			<%= @order.address %></br>
			<%= @order.name %></br>
		</td>
	</tr>
	<tr>
		<th>支払い方法</th>
		<td><%= @order.payment_method %></td>
	</tr>
	<tr>
		<th>ステータス</th>
		<td><%= @order.status %></td>
	</tr>
</table>

<p>請求情報</p>
<table class="table">
	<tr>
		<th>商品合計</th>
		<td><%= (@order.total_fee).floor.to_s(:delimited) %></td>
	</tr>
	<tr>
		<th>配送料</th>
		<td><%= @order.postage %></td>
	</tr>
	<tr>
		<th>ご請求額</th>
		<td><%= (@order.total_fee + @order.postage).floor.to_s(:delimited) %></td>
	</tr>
</table>

<p>注文内容</p>

<table class="table">
	<thead>
		<tr>
			<th>商品</th>
			<th>単価(税込)</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
	</thead>
	<tbody>
		<% @order_products.each do |order_product| %>
			<tr>
				<td><%= order_product.product.name %></td>
				<td><%= addTax(order_product.price) %></td>
				<td><%= order_product.quantity %></td>
				<td><%= (order_product.quantity * order_product.price * 1.1).floor.to_s(:delimited) %></td>
			</tr>
		<% end %>
	</tbody>
</table>