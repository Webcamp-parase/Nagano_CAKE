<h3>注文履歴一覧</h3>
<table class="table">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<td><%= l order.created_at, format: :short %></td>
				<td><%= order.postal_code %></br>
					<%= order.address %></br>
					<%= order.name %></br>
				</td>
				<td><% OrderProduct.where(order_id: order).each do |order_product| %>
						<%= order_product.product.name %></br>
					<% end %>
				</td>
				<td><%= (order.total_fee + order.postage).floor.to_s(:delimited) %>円</td>
				<td><%= order.status %></td>
   				<td><%= link_to "詳細", order_path(order), class: "btn btn-primary" %></td>
			</tr>
		<% end %>
	</tbody>
</table>