<div class='row' style="padding: 50px 15px;">
  <div class='col-sm-3'>
   <%= render 'category', categories: @categories %>
</div>

	<div class='col-sm-9'>
	 <h2 style="margin: 0px 0px 30px 0px;"><%= @name %>一覧<small> (全<%= @products.total_count %>件)</small></h2>
	 <div class='row'>
	  <% @products.each do |product| %>

		  <div class='col-sm-3'>
				<tr>
				  <%= link_to product_path(product.id) do %>
					<td><%= attachment_image_tag product, :image, :fill, 180, 180, format: 'jpeg', fallback: "no_image.jpg", size: '180x180' %></td>
					<td><p style="color: black;"><%= product.name %></p></td>
					<td><p style="color: #eb2142;">¥<%= product.non_tax_price.to_s(:delimited) %><p></td>
				  <% end %>
				</tr>
		  </div>

	  <% end %>
	 </div>
	 <div class='row'>
	  <div class="text-center">
	   <%= paginate @products, class: "paginate" %>
	  </div>
	 </div>
	</div>
</div>