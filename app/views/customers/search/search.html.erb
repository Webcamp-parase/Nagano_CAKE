<div class='row' style="padding: 50px 15px;">
  <div class='col-sm-3'>
   <%= render 'customers/products/category', categories: @categories %>
  </div>

	<div class='col-sm-9'>
	 <p><h2>検索結果</h2>(全<%= @products.total_count %>件)</p>
	 <div class='row'>
	  <% @products.each do |product| %>
	  <div class='col-sm-3'>
		<tr>
		  <%= link_to product_path(product.id) do %>
			<td><%= attachment_image_tag product, :image, :fill, 180, 180, format: 'jpeg', fallback: "no_image.jpg", size: '180x180' %></td>
			<td><p><%= product.name %></p></td>
			<td><p>¥<%= product.non_tax_price %></p></td>
		  <% end %>
		</tr>
	  </div>
	  <% end %>
	 </div>
	 <div class='row'>
	  <%= paginate @products, class: "paginate" %>
	 </div>
	</div>
</div>