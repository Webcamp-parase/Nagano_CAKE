<h3 class="text-center" style="width: 250px; margin: 30px 0 30px 100px; background-color: lightgray;">配送先登録 / 一覧</h3>
<table class="table" style="max-width: 800px;">

<% if @delivery.errors.any? %>
	<% @delivery.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
<% end %>

<%= form_with model: @delivery, local: true do |f| %>

	<tr>
		<td style="width: 25%; border-style: none;">郵便番号(ハイフンなし)</td>
		<td style="width: 25%; border-style: none;"><%= f.text_field :postal_code, class: "form-control" %></td>
		<td style="width: 45%; border-style: none;"></td>
		<td style="width: 15%; border-style: none;"></td>
	</tr>

	<tr>
		<td style="border-style: none;">住所</td>
		<td colspan="2" style="border-style: none;"><%= f.text_field :address, class: "form-control" %></td>
		<td style="border-style: none;"></td>
	</tr>

	<tr>
		<td style="border-style: none;">宛名</td>
		<td style="border-style: none;"><%= f.text_field :name, class: "form-control" %></td>
		<td class="text-right" colspan="2" style="border-style: none;"><%= f.submit "登録する", class: "btn btn-success" %></td>
	</tr>
<% end %>
</table>
<table class="table table-bordered" style="max-width: 800px">
	<thead>
		<tr>
			<th style="width: 15%; background-color: lightgray;">郵便番号</th>
			<th style="width: 45%; background-color: lightgray;">住所</th>
			<th style="width: 15%; background-color: lightgray;">宛名</th>
			<th style="width: 25%; background-color: lightgray;"></th>
		</tr>
	</thead>
	<tbody>
	<% @deliveries.each do |delivery| %>
		<%= render "delivery", delivery: delivery %>
	<% end %>
	</tbody>
</table>