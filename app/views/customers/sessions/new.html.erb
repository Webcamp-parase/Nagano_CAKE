<h4 class="text-center" style="width: 280px; margin: 30px 0 30px 100px; background-color: lightgray;">会員の方はこちらからログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<table class= "table" style="max-width: 600px;">
  <tr>
    <td style="width: 40%; border-style: none;">メールアドレス</td>
    <td style="width: 60%; border-style: none;">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </td>
  </tr>

  <tr>
    <td style="border-style: none;">パスワード</td>
    <td style="border-style: none;">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td class="text-center" colspan="2" style="border-style: none;"><%= f.submit "ログイン", class: "btn btn-primary" %></td>
  </tr>
</table>

<% end %>

<h4 class="text-center" style="width: 250px; margin: 30px 0 30px 100px; background-color: lightgray;">登録がお済みでない方</h4>
<p style="margin-left: 100px;"><%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください。</p>
