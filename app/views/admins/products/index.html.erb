<h2>商品一覧画面</h2>

<%= link_to "新規投稿(実際は+ボタン)", new_admins_product_path %></br>

<table>
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td><%= link_to admins_product_path(product.id) do %>
						<%= product.name %>
					<% end %>
				</td>
				<td><%= product.non_tax_price.to_s(:delimited) %></td>
				<td><%= product.category.name %></td>
				<td><%= product.status %></td>
			</tr>
		<% end %>
	</tbody>
</table>
