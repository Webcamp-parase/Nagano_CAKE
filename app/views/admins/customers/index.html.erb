<h3><strong>会員一覧画面</strong></h3>

<table class="table">
	<thead>
		<tr class="active">
			<th>会員ID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>ステータス</th>
		</tr>
	</thead>
<tbody>
	<% @customers.each do |customer| %>
		<tr>
			<td><%= customer.id %></td>
			<td><%= link_to admins_customer_path(customer.id) do %>
					<%= customer.last_name + customer.first_name %>
				<% end %>
			</td>
			<td><%= customer.email %></td>
			<td><%= customer.status %></td>
		</tr>
	<% end %>
</tbody>
</table>

<div class="page"><%= paginate @customers %></div>



