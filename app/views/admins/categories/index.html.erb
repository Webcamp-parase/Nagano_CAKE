<%= stylesheet_link_tag "admins/categories", :media => "all" %>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3><strong>ジャンル追加・一覧画面</strong></h3>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12">
			<%= form_with model: [:admins, @category] do |f| %>
				<p>ジャンル　<%= f.text_field :name %></p>
				<p><%= f.radio_button :status, :"有効" %> 有効</p>
				<p><%= f.radio_button :status, :"無効" %> 無効</p>
				<p><%= f.submit('追加',class: 'btn btn-info btn-outline-dark btn-sm active')%></p>
			<% end %>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-4">
			<table class="table">
				<thead>
					<tr class="active">
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @categories.each do |category| %>
						<tr>
							<td><%= category.name %></td>
							<td><%= category.status %></td>
							<td><%= link_to "編集する", edit_admins_category_path(category.id), class: 'btn btn-primary btn-sm active' %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>