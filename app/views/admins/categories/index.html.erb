<h2>ジャンル追加・一覧画面</h2>

<%= form_with model: [:admins, @category] do |f| %>
	ジャンル　<%= f.text_field :name %>
	<%= f.radio_button :status, :"有効" %>有効
	<%= f.radio_button :status, :"無効" %>無効
	<%= f.submit "追加"%>
<% end %>


<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @categories.each do |category| %>
			<tr>
				<td><%= category.name %></td>
				<td><%= category.status %></td>
				<td><%= link_to "編集する", edit_admins_category_path(category.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>